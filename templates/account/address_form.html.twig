{% extends 'base.html.twig' %}

{% block title %}Gérer mes adresses - {{ contact_company }}{% endblock %}

{% block content %}

<div class="container">
    <div class="formulaire">
        <div id="address-form">
            {{  form_start(form) }}
            <p class="h2">Gérer mes adresses</p>
            <div class="row">
                <div class="col-md-12">{{  form_row(form.name) }}</div>
                <div class="col-md-6">
                    {{  form_row(form.firstname) }}
                    {{  form_row(form.lastname) }}
                    {{  form_row(form.company) }}
                    {{  form_row(form.phone) }}
                </div>
                <div class="col-md-6">  
                    {{  form_row(form.address) }}
                    {{  form_row(form.postal) }}
                    {{  form_row(form.city) }}
                    {{  form_row(form.country) }}
                </div>
            </div>
            <div class="buttons">
                <div class="submit mb-0">
                    {{  form_row(form.submit) }}
                </div>
                <a href="{{ path('account_address') }}">Retourner à mes adresses</a>
            </div>
            {{  form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}

