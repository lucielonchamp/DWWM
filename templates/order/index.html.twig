{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - {% endblock %}

{% block content %}
<h2>Valider ma commande</h2>

<div class="row">
    <div class="col-md-6">
        {% set formHtml %}
            {{ form_start(form, {action:path('order_recap')}) }}
            {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
            <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
            {{ form_end(form) }}
        {% endset %}

        {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
    </div>
    <div class="col-md-6">
        <p>RÃ©capitulatif de la commande</p>
        {% for product in cart %}
        <div class="row">
            <div class="col-2"><img src="/uploads/{{ product.product.illustration }}" height="75px" alt="{{product.product.name}}"></div>
            <div class="col-8">{{product.product.name}} <br/> {{product.product.subtitle}}</div>
            <div class="col-2">x {{ product.quantity }}</div>
        </div>
            
        {% endfor %}

        <p class="btn btn-success">Payer</p>
    </div>
</div>
{% endblock %}
